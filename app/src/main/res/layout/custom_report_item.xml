<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10sdp"
        android:backgroundTint="#FAF2F2"
        android:layout_margin="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reportTitle"
                style="@style/Theme.VolunteerApp.mTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="Report" />

            <TextView
                android:id="@+id/reportDescription"
                style="@style/Theme.VolunteerApp.mTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reportTitle"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="@dimen/_4sdp"
                android:text="Description"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reportDescription">

                <TextView
                    android:id="@+id/report_date"
                    style="@style/Theme.VolunteerApp.mTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableStart="@drawable/ic_calender"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/reportAuther"
                    style="@style/Theme.VolunteerApp.mTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="person" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>