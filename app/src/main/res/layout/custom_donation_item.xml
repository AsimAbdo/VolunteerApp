<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardMaxElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp">

            <TextView
                android:id="@+id/don_tv_title"
                style="@style/Theme.VolunteerApp.mTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:text="@string/don_tv_title" />

            <TextView
                android:id="@+id/don_tv_receivingEntity"
                style="@style/Theme.VolunteerApp.mTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/don_tv_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:text="@string/receivingEntity" />

            <LinearLayout
                android:id="@+id/acItem_tv_accountData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/don_tv_receivingEntity">

                <TextView
                    android:id="@+id/don_tv_date"
                    style="@style/Theme.VolunteerApp.mTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableStart="@drawable/ic_liberary"
                    android:drawablePadding="@dimen/_3sdp"
                    android:text="Account Number" />

                <TextView
                    android:id="@+id/don_tv_amount"
                    style="@style/Theme.VolunteerApp.mTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_currency"
                    android:drawablePadding="@dimen/_3sdp"
                    android:drawableTint="@color/accent"
                    android:text="Balance" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>