<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.DashboardScreen.DonorDashboard.DonorFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/donor_donate"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/donate_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/donor_tv_donate"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/donor_viewResources"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/donation_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/donor_tv_viewPriviousDonates"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/admin_tasks"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/task_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_task"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/donor_viewReports"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/report_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_report"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/donor_cashFund"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/resource_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_resource"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

</LinearLayout>