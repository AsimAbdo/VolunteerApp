<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DashboardScreen.AdminDashborad.AdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/admin_users"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/users_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_users"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/admin_resources"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/resource_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_resource"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/admin_tasks"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/task_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_task"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/admin_reports"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/textColor"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/report_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Theme.VolunteerApp.mTextStyle"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/admin_tv_manage_report"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</ScrollView>